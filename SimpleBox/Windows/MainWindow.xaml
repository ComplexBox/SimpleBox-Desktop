<fw:AcrylicWindow x:Class="SimpleBox.Windows.MainWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                  xmlns:local="clr-namespace:SimpleBox.Windows"
                  xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
                  xmlns:controls="clr-namespace:SimpleBox.Controls"
                  mc:Ignorable="d"
                  Title="SimpleBox"
                  Height="600" Width="1056"
                  MinHeight="600" MinWidth="1056"
                  AcrylicWindowStyle="NoIcon"
                  ExtendViewIntoTitleBar="True"
                  TextOptions.TextFormattingMode="Display"
                  Icon="/SimpleBox;component/Assets/SimpleBox.Colored.Transparent.ico"
                  Foreground="White"
                  UseLayoutRounding="True"
                  NoiseOpacity="0"
                  TintOpacity="0"
                  SnapsToDevicePixels="True"
                  fw:PointerTracker.Enabled="True"
                  Name="RootElement">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Background="#40000000">
            <Grid Margin="0,32,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ListBox Grid.Row="0"/>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Style="{DynamicResource ButtonRevealTransparentStyle}"
                            HorizontalContentAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <controls:FluentIcon Grid.Column="0" Symbol="Person"/>
                            <TextBlock Grid.Column="1" Text="登录"
                                       Style="{DynamicResource AppBarWideTextStyle}"/>
                        </Grid>
                    </Button>
                    <Button Grid.Column="1" Style="{DynamicResource ButtonRevealTransparentStyle}"
                            Click="OpenSettingsButtonBase_OnClick" ToolTip="设置">
                        <controls:FluentIcon Symbol="Settings"/>
                    </Button>
                </Grid>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="#A0000000">
            <Grid Margin="0,32,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Style="{DynamicResource ButtonRevealTransparentStyle}"
                            HorizontalContentAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <controls:FluentIcon Grid.Column="0" Symbol="Add"/>
                            <TextBlock Grid.Column="1" Text="新建"
                                       Style="{DynamicResource AppBarWideTextStyle}"/>
                        </Grid>
                    </Button>
                    <Button Grid.Column="1" Style="{DynamicResource ButtonRevealTransparentStyle}"
                            ToolTip="导入">
                        <controls:FluentIcon Symbol="Import"/>
                    </Button></Grid>
                <ListBox Grid.Row="1"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="2" Background="#C0000000">
            <Grid Margin="0,32,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBox Grid.Row="0" Style="{DynamicResource MainEditTextBoxStyle}"/>
                    <Grid Grid.Row="1" Height="5">
                        <Grid Height="1" VerticalAlignment="Center"
                              Background="White" Opacity="0.1"
                              Margin="18,0"/>
                    </Grid>
                    <TextBox Grid.Row="2" Style="{DynamicResource MainEditTextBoxStyle}"/>
                </Grid>
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Style="{DynamicResource ButtonRevealTransparentStyle}"
                            HorizontalContentAlignment="Stretch">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <controls:FluentIcon Grid.Column="0" Symbol="Check"/>
                            <TextBlock Grid.Column="1" Text="显示"
                                       Style="{DynamicResource AppBarWideTextStyle}"/>
                        </Grid>
                    </Button>
                    <StackPanel Orientation="Horizontal" Grid.Column="1"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</fw:AcrylicWindow>
